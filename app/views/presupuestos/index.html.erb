<div class="container">

<h3 align="center">Presupuestos</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Cliente</th>
      <th colspan="3">
        <%= link_to 'Nuevo Presupuesto', new_presupuesto_path, class:"btn btn-success" %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @presupuestos.each do |presupuesto| %>
      <tr>
        <td><%= presupuesto.descripcion %></td>
        <td><%= presupuesto.cliente.nombre %>, <%= presupuesto.cliente.apellido %></td>
        <td><%= link_to 'Detalles', presupuesto_factura_path(presupuesto), class:"btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_presupuesto_path(presupuesto), class:"btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', presupuesto, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
