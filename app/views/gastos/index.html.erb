<p id="notice"><%= notice %></p>

<h3 align="center">Gastos</h3>
<%# boton nuevo %>
<div class="container-fluid" align="center">
  <%= render partial: 'layouts/search_form', locals: { search_entity: 'items', word: "Gasto" } %>
<br>
</div>
<br>
<div class="boton_redirect">
<%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Fecha compra</th>
      <th>Motivo</th>
      <th>Descripcion</th>
      <th>Costo</th>
      <th colspan="3">
        <%= link_to 'Nuevo Gasto', new_gasto_path, class: "btn btn-success" %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @gastos.each do |gasto| %>
      <tr>
        <td><%= gasto.fecha_compra %></td>
        <td><%= gasto.motivo %></td>
        <td><%= gasto.descripcion %></td>
        <td><%= gasto.costo %> Gs.</td>
        <td><%= link_to 'Detalles', gasto, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_gasto_path(gasto), class: "btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', gasto, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
