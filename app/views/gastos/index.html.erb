<p id="notice"><%= notice %></p>

<h1>Gastos</h1>

<table>
  <thead>
    <tr>
      <th>Fecha compra</th>
      <th>Motivo</th>
      <th>Descripcion</th>
      <th>Costo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gastos.each do |gasto| %>
      <tr>
        <td><%= gasto.fecha_compra %></td>
        <td><%= gasto.motivo %></td>
        <td><%= gasto.descripcion %></td>
        <td><%= gasto.costo %></td>
        <td><%= link_to 'Show', gasto %></td>
        <td><%= link_to 'Edit', edit_gasto_path(gasto) %></td>
        <td><%= link_to 'Destroy', gasto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

