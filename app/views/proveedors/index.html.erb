<p id="notice"><%= notice %></p>
<div class="container">
  <h3 align="center">Proveedor</h3>
   <%# boton nuevo %>
   <div class="container-fluid" align="center">
     <%= render partial: 'layouts/search_form', locals: { search_entity: 'items', word: "Proveedor" } %>
<br>
  </div>
<br>
<div class="boton_redirect">
  <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
</div>
<%= link_to proveedors_path(:format => 'pdf'), class: "btn btn-outline-dark", :target => "_blank"  do%>
  <i class="glyphicon glyphicon-print"></i> Imprimir Reporte
<% end %>
<!-- lista de proveedores -->
<div class="table-responsive-md">
<table class="table table-hover">
  <thead class="head-dark">
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Ruc</th>
      <th colspan="3"><%= link_to 'Nuevo', new_proveedor_path, type: "button", class: "btn btn-success"  %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.ruc %></td>
        <td><%= link_to 'Detalles', proveedor , class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor) , class: "btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', proveedor, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

</div>
