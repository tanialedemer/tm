<p id="notice"><%= notice %></p>
<div class="container">
  <h3 align="center">Proveedor</h3>
   <%# boton nuevo %>
   <div class="container-fluid" align="center">
     <%= render partial: 'layouts/search_form', locals: { search_entity: 'items', word: "Proveedor" } %>
<br>
  </div>
<br>
<div class="boton_redirect">
  <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>

</div>
<!-- lista de proveedores -->
<div class="table-responsive-md">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Ruc</th>
      <th colspan="3"><%= link_to 'Nuevo Proveedor', new_proveedor_path, type: "button", class: "btn btn-success"  %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.email %></td>
        <td><%= proveedor.ruc %></td>
        <td><%= link_to 'Show', proveedor %></td>
        <td><%= link_to 'Edit', edit_proveedor_path(proveedor) %></td>
        <td><%= link_to 'Destroy', proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

</div>
