<div class="container">

<%= form_with(model: vehiculo, local: true) do |form| %>
  <% if vehiculo.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(vehiculo.errors.count, "errores") %>

      <ul>
        <% vehiculo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="container center">

  <div class="form-group">
    <%= form.label :cliente_id ,"Cliente"%>
    <%= form.collection_select :cliente_id, Cliente.order(:nombre), :id, :nombre,class: "chosen-select form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_field :modelo, class:"form-control", placeholder:"Modelo" %>
  </div>

  <div class="form-group">
    <%= form.text_field :color, class:"form-control", placeholder:"Color" %>
  </div>

  <div class="form-group">
    <%= form.text_field :matricula, class:"form-control", placeholder:"Matricula" %>
  </div>

  <div class="form-group">
    <%= form.text_field :marca, class:"form-control", placeholder:"Marcas" %>
  </div>

  <div class="form-group">
    <%= form.text_field :km, class:"form-control", placeholder:"Km" %>
  </div>

  <div class="form-group">
    <%= form.text_field :chasis, class:"form-control", placeholder:"Chasis" %>
  </div>

  <div class="form-group">
    <%= form.number_field :year_fab, class:"form-control", placeholder:"AÃ±o" %>
  </div>


  <div class="actions">
    <%= form.submit "Guardar", class:"btn btn-success form-control" %>
  </div>

</div>
</div>

<% end %>
</div>
