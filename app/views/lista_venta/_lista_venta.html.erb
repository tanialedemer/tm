<!-- Content -->
<div class="row">
  <% if @venta.empty? %>
    <div class="col-md-4 col-sm-5">
      <p class="alert alert-warning">No ha encontrado ning√∫na factura</p>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Cliente</th>
          <th>Fecha</th>
          <th>Total</th>
        </tr>
        </thead>
        <tbody>
        <% @venta.each do |venta| %>
          <tr>
            <td><%= "#{venta.cliente.nombre} #{venta.cliente.apellido}" %></td>
            <td><%= I18n.l(venta.created_at, format: '%d de %B de %Y').upcase %></td>
            <td><%= "#{ number_to_currency(venta.total, unit: "Gs.") }"%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <%end%>
</div>