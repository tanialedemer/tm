<div class="container">

<%= form_with(model: categorium, local: true) do |form| %>
  <% if categorium.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(categorium.errors.count, "error") %>

      <ul>
        <% categorium.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class:"btn btn-success"%>
  </div>
<% end %>
</div>
