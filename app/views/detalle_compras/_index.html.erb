			<td><%= link_to "Eliminar", compra_detalle_compra_path(detail.compra.id, detail.id), method: :delete, remote: true, data: { confirm: 'EstÃ¡ seguro?' } %> </td>
		<% end %>
	</tr>
<% end %>
