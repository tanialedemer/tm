
     <h3 class="panel-title" align="center">Registrarse</h3>
    <div class="panel-body"><br>
      <div class="container col-5">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <fieldset>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :username, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder:"Usuario" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder:"ContraseÃ±a" %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control', placeholder:"Confirmar ContraseÃ±a" %>
  </div>

  <div class="form-group">
        <%= f.submit "Registrarse", class: "btn btn-success btn-block" %>  </div>
<% end %>
      </fieldset>
<%= render 'devise/shared/links' %>
</div>
</div>
</div>
