<div class="container">
<h3 align="center">Compras</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Proveedor</th>
      <th>Tipo factura</th>
      <th>Num fact</th>
      <th>Total</th>
      <th>Estado</th>
      <th colspan="3">
        <%= link_to 'Nueva Compra', new_compra_path, class:"btn btn-success" %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.fecha %></td>
        <td><%= compra.proveedor.nombre %></td>
        <td><%= compra.tipo_factura.descripcion %></td>
        <td><%= compra.num_fact %></td>
        <td><%= number_to_currency(compra.total, unit:"Gs.") %></td>
        <td><%= compra.estado %></td>
        <td><%= link_to 'Detalles', compra , class:"btn btn-info"%></td>
        <td><%= link_to 'Editar', edit_compra_path(compra), class:"btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', compra, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
