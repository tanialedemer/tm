<div class="container">

<%= form_with(model: tipo_factura, local: true) do |form| %>
  <% if tipo_factura.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(tipo_factura.errors.count, "error") %>

      <ul>
        <% tipo_factura.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="container center">

  <div class="field">
    <%= form.text_field :descripcion, class:"form-control", placeholder:"Descripcion" %>
  </div>
<br>
  <div class="actions">
    <%= form.submit "Guardar", class:"form-control btn btn-success" %>
  </div>
  </div>
</div>

<% end %>
</div>
