<p id="notice"><%= notice %></p>

<h1>Tipo Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_facturas.each do |tipo_factura| %>
      <tr>
        <td><%= tipo_factura.descripcion %></td>
        <td><%= link_to 'Show', tipo_factura %></td>
        <td><%= link_to 'Edit', edit_tipo_factura_path(tipo_factura) %></td>
        <td><%= link_to 'Destroy', tipo_factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

