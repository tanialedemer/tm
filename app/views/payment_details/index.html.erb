<p id="notice"><%= notice %></p>

<h1>Payment Details</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Subtotal</th>
      <th>Payment</th>
      <th>Repuesto servicio</th>
      <th>Precio unitario</th>
      <th>Total</th>
      <th>Saldo</th>
      <th>Precio venta</th>
      <th>Pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_details.each do |payment_detail| %>
      <tr>
        <td><%= payment_detail.cantidad %></td>
        <td><%= payment_detail.subtotal %></td>
        <td><%= payment_detail.payment_id %></td>
        <td><%= payment_detail.repuesto_servicio_id %></td>
        <td><%= payment_detail.precio_unitario %></td>
        <td><%= payment_detail.total %></td>
        <td><%= payment_detail.saldo %></td>
        <td><%= payment_detail.precio_venta %></td>
        <td><%= payment_detail.pago %></td>
        <td><%= link_to 'Show', payment_detail %></td>
        <td><%= link_to 'Edit', edit_payment_detail_path(payment_detail) %></td>
        <td><%= link_to 'Destroy', payment_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

